doctype html
html.uk-height-1-1
  head
    block head
      block title
        title Talent Login
      block meta
        meta(name='description', content='')
        meta(name='keywords', content='')
      link(rel='stylesheet', href='/stylesheets/uikit.gradient.min.css')
      script(src='/javascripts/jquery.min.js')
      script(src='/javascripts/uikit.min.js')
  body.uk-height-1-1
    div.uk-vertical-align.uk-text-center.uk-height-1-1
      div.uk-vertical-align-middle(style='width: 250px;')
        - if (flash.error)
          div.uk-alert.uk-alert-danger #{flash.error}
        img.uk-margin-bottom(width='140',height='120',src='',alt='')
        form.uk-panel.uk-panel-box.uk-form(action='/',method='post')
          p Sign In
          div.uk-form-row
            input.uk-width-1-1(type='text',name='username',placeholder='User Name',value='')
          div.uk-form-row
            input.uk-width-1-1(type='password',name='password',placeholder='Password')
          div.uk-form-row
            button.uk-width-1-1.uk-button.uk-button-primary(type='submit') Login
