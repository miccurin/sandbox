doctype html
html
	head
		block head
			block title
				title Talent
			block meta
				meta(name='description', content='')
				meta(name='keywords', content='')
				meta(http-equiv='Cache-Control', content='no-store')
			link(rel='stylesheet', href='/stylesheets/uikit.gradient.min.css')
			link(rel='stylesheet', href='/stylesheets/datepicker.gradient.min.css')
			link(rel='stylesheet', href='/stylesheets/simple-slider.css')
			link(rel='stylesheet', href='/stylesheets/simple-slider-volume.css')
			script(src='/javascripts/jquery.min.js')
			script(src='/javascripts/uikit.min.js')
			script(src='/javascripts/datepicker.min.js')
			script(src='/javascripts/global.js')
			script(src='/javascripts/utils.js')
			script(src='/javascripts/pagination.js')
			script(src='/javascripts/simple-slider.js')
			script(src='/javascripts/jquery.flot.min.js')
			script(type='text/javascript').
				var token = "#{info.token}";
				var userId = "#{info.userId}";
				var apiServer = "#{info.apiUri}";
	body

		div.uk-container.uk-container-center.uk-margin-top

			div.uk-navbar.uk-margin-bottom
				a.uk-navbar-brand.uk-hidden-small(href='#splash',data-uk-modal='')
					img(src='/images/satir.png', width=40)
				ul.uk-navbar-nav(data-uk-switcher="{connect:'#nav-content'}")
					li.uk-active
						a(href="#candidates") Candidates
					li
						a(href="#users") Users
				div.uk-navbar-content.uk-navbar-flip
					div.uk-navbar-content.uk-text-bold.uk-text-muted(style='padding-top:5px') #{info.userName}
					button#btn-logout.uk-button.uk-button-danger Sign Out

			ul#nav-content.uk-switcher.uk-margin
				li.uk-active
					div.uk-overflow-container
						div.uk-grid
							div.uk-width-1-1(data-uk-margin)
								a.uk-button.uk-button-primary.uk-align-right(href='#add-candidate',data-uk-modal='') New Candidate
								form.uk-form.uk-margin-remove.uk-display-inline-block.uk-align-right
									input#search-candidate-name(type='text', placeholder='Enter Name')
									button#btn-search-candidate.uk-button.uk-button-default Search

						#candidate-list
							table.uk-table.uk-table-hover.uk-table-striped.uk-table-condensed
								thead
									th Name
									th.uk-hidden-small Role
									th.uk-hidden-small Source
									th Status
									th.uk-hidden-small Date Added
									th.uk-hidden-small Date Updated
									th Actions
								tbody
							ul#pag-candidates.uk-pagination

				li
					div.uk-overflow-container
						div.uk-grid
							div.uk-width-1-1(data-uk-margin)
								a.uk-button.uk-button-primary.uk-align-right(href='#add-user',data-uk-modal='') New User
								form.uk-form.uk-margin-remove.uk-display-inline-block.uk-align-right
									input#search-user-name(type='text', placeholder='Enter Name')
									button#btn-search-user.uk-button.uk-button-default Search

						#user-list
							table.uk-table.uk-table-hover.uk-table-striped.uk-table-condensed
								thead
									th Name
									th Department
									th.uk-hidden-small Group
									th.uk-hidden-small Date Added
									th.uk-hidden-small Date Updated
									th Actions
								tbody
							ul#pag-users.uk-pagination

			div#add-candidate.uk-modal(style='display:none')
				div.uk-modal-dialog
					a.uk-modal-close.uk-close(href='')
					h2 Add Candidate
					form.uk-form(data-uk-margin)
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
								input#add-candidate-name.uk-width-1-1(type='text', placeholder='Name')
							div.uk-width-medium-1-2
								input#add-candidate-role.uk-width-1-1(type='text', placeholder='Role')
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
								select#add-candidate-source.uk-width-1-1
							div.uk-width-medium-1-2
						p
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
							div.uk-width-medium-1-2
								button#btn-add-candidate.uk-button.uk-button-primary.uk-align-right.uk-modal-close Add
								button.uk-button.uk-button-default.uk-align-right.uk-modal-close Cancel

			div#add-user.uk-modal(style='display:none')
				div.uk-modal-dialog
					a.uk-modal-close.uk-close(href='')
					h2 Add User
					form.uk-form(data-uk-margin)
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
								input#add-user-username.uk-width-1-1(type='text', placeholder='Username')
							div.uk-width-medium-1-2
								input#add-user-name.uk-width-1-1(type='text', placeholder='Name')
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
								input#add-user-department.uk-width-1-1(type='text', placeholder='Department')
							div.uk-width-medium-1-2
								select#add-user-group.uk-width-1-1
						p
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
							div.uk-width-medium-1-2
								button#btn-add-user.uk-button.uk-button-primary.uk-align-right.uk-modal-close Add
								button.uk-button.uk-button-default.uk-align-right.uk-modal-close Cancel

			div#edit-candidate.uk-modal(style='display:none')
				div.uk-modal-dialog
					a.uk-modal-close.uk-close(href='')
					h2 Edit Candidate
					form.uk-form(data-uk-margin)
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
								input#edit-candidate-name.uk-width-1-1(type='text', placeholder='Name')
							div.uk-width-medium-1-2
								input#edit-candidate-role.uk-width-1-1(type='text', placeholder='Role')
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
								select#edit-candidate-source.uk-width-1-1
							div.uk-width-medium-1-2
								select#edit-candidate-status.uk-width-1-1
						p
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
								input#edit-candidate-id(type='hidden')
							div.uk-width-medium-1-2
								button#btn-save-candidate.uk-button.uk-button-primary.uk-align-right.uk-modal-close Save
								button.uk-button.uk-button-default.uk-align-right.uk-modal-close Cancel

			div#edit-user.uk-modal(style='display:none')
				div.uk-modal-dialog
					a.uk-modal-close.uk-close(href='')
					h2 Edit User
					form.uk-form(data-uk-margin)
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
								input#edit-user-username.uk-width-1-1(type='text', placeholder='Username')
							div.uk-width-medium-1-2
								input#edit-user-name.uk-width-1-1(type='text', placeholder='Name')
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
								input#edit-user-department.uk-width-1-1(type='text', placeholder='Department')
							div.uk-width-medium-1-2
								select#edit-user-group.uk-width-1-1
						p
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
								input#edit-user-id(type='hidden')
							div.uk-width-medium-1-2
								button#btn-save-user.uk-button.uk-button-primary.uk-align-right.uk-modal-close Save
								button.uk-button.uk-button-default.uk-align-right.uk-modal-close Cancel

			div#analyze-curve.uk-modal(style='display:none')
				div.uk-modal-dialog
					a.uk-modal-close.uk-close(href='')
					h2 Analyze Candidate
					div.uk-grid
						div.uk-width-medium-2-3
							div#curve-id.uk-width-1-1(style='height:560px;width:400px;')
						div.uk-width-medium-1-3
							div#analyze-curve-users(data-uk-button-checkbox='' style='margin-top:10px')
							form.uk-form(style='margin-top:10px;')
					p
					div.uk-grid(data-uk-grid-margin)
						div.uk-width-medium-1-1
							button.uk-button.uk-button-default.uk-align-right.uk-modal-close Cancel

			div#edit-curve.uk-modal(style='display:none')
				div.uk-modal-dialog
					a.uk-modal-close.uk-close(href='')
					h2 Rate Candidate
					form.uk-form(data-uk-margin)
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-1
								div.uk-grid(data-uk-grid-margin, style='margin-top:5px')
									div.uk-width-medium-1-2
									div.uk-width-medium-1-2
										div.uk-button-group.uk-align-right
											button#btn-back-curve.uk-button
												i.uk-icon-backward
											button#btn-new-curve.uk-button New
											button#btn-forward-curve.uk-button
												i.uk-icon-forward
								div.uk-grid(data-uk-grid-margin, style='margin-top:15px')
									div.uk-width-medium-1-2
										input#rate-date.uk-width-1-1(data-uk-datepicker="{format:'YYYY-MM-DD'}", placeholder='Rating Date')
									div.uk-width-medium-1-2
										select#rate-event.uk-width-1-1
								div.uk-grid(data-uk-grid-margin, style='margin-top:5px')
									div.uk-width-medium-1-1
										textarea#rate-comment.uk-width-1-1(rows=3, placeholder='Comments')
								div.uk-grid(data-uk-grid-margin)
									div.uk-width-medium-1-3
										label.uk-form-label(for='rate-integrity') Integrity
									div.uk-width-medium-2-3
										div.uk-form-controls(style='background-image:url("/images/back2.png");background-repeat:no-repeat')
											input#rate-integrity(type='text', data-slider='true', data-slider-range='1,5', data-slider-step='0.5', data-slider-snap='true')
											i.uk-form-help-inline(style='color:green')
								div.uk-grid(data-uk-grid-margin, style='margin-top:0px')
									div.uk-width-medium-1-3
										label.uk-form-label(for='rate-motivation') Motivation
									div.uk-width-medium-2-3
										div.uk-form-controls(style='background-image:url("/images/back2.png");background-repeat:no-repeat')
											input#rate-motivation(type='text', data-slider='true', data-slider-range='1,5', data-slider-step='0.5', data-slider-snap='true')
											i.uk-form-help-inline(style='color:green')
								div.uk-grid(data-uk-grid-margin, style='margin-top:0px')
									div.uk-width-medium-1-3
										label.uk-form-label(for='rate-fit') Fit
									div.uk-width-medium-2-3
										div.uk-form-controls(style='background-image:url("/images/back2.png");background-repeat:no-repeat')
											input#rate-fit(type='text', data-slider='true', data-slider-range='1,5', data-slider-step='0.5', data-slider-snap='true')
											i.uk-form-help-inline(style='color:green')
								div.uk-grid(data-uk-grid-margin, style='margin-top:0px')
									div.uk-width-medium-1-3
										label.uk-form-label(for='rate-curiosity') Curiosity
									div.uk-width-medium-2-3
										div.uk-form-controls(style='background-image:url("/images/back2.png");background-repeat:no-repeat')
											input#rate-curiosity(type='text', data-slider='true', data-slider-range='1,5', data-slider-step='0.5', data-slider-snap='true')
											i.uk-form-help-inline(style='color:green')
								div.uk-grid(data-uk-grid-margin, style='margin-top:0px')
									div.uk-width-medium-1-3
										label.uk-form-label(for='rate-capacity') Capacity
									div.uk-width-medium-2-3
										div.uk-form-controls(style='background-image:url("/images/back2.png");background-repeat:no-repeat')
											input#rate-capacity(type='text', data-slider='true', data-slider-range='1,5', data-slider-step='0.5', data-slider-snap='true')
											i.uk-form-help-inline(style='color:green')
								div.uk-grid(data-uk-grid-margin, style='margin-top:0px')
									div.uk-width-medium-1-3
										label.uk-form-label(for='rate-dexterity') Dexterity
									div.uk-width-medium-2-3
										div.uk-form-controls(style='background-image:url("/images/back2.png");background-repeat:no-repeat')
											input#rate-dexterity(type='text', data-slider='true', data-slider-range='1,5', data-slider-step='0.5', data-slider-snap='true')
											i.uk-form-help-inline(style='color:green')
								div.uk-grid(data-uk-grid-margin, style='margin-top:0px')
									div.uk-width-medium-1-3
										label.uk-form-label(for='rate-networking') Networking
									div.uk-width-medium-2-3
										div.uk-form-controls(style='background-image:url("/images/back2.png");background-repeat:no-repeat')
											input#rate-networking(type='text', data-slider='true', data-slider-range='1,5', data-slider-step='0.5', data-slider-snap='true')
											i.uk-form-help-inline(style='color:green')
								div.uk-grid(data-uk-grid-margin, style='margin-top:0px')
									div.uk-width-medium-1-3
										label.uk-form-label(for='rate-leadership') Leadership
									div.uk-width-medium-2-3
										div.uk-form-controls(style='background-image:url("/images/back2.png");background-repeat:no-repeat')
											input#rate-leadership(type='text', data-slider='true', data-slider-range='1,5', data-slider-step='0.5', data-slider-snap='true')
											i.uk-form-help-inline(style='color:green')
								div.uk-grid(data-uk-grid-margin, style='margin-top:0px')
									div.uk-width-medium-1-3
										label.uk-form-label(for='rate-knowledge') Knowledge
									div.uk-width-medium-2-3
										div.uk-form-controls(style='background-image:url("/images/back2.png");background-repeat:no-repeat')
											input#rate-knowledge(type='text', data-slider='true', data-slider-range='1,5', data-slider-step='0.5', data-slider-snap='true')
											i.uk-form-help-inline(style='color:green')
								div.uk-grid(data-uk-grid-margin, style='margin-top:0px')
									div.uk-width-medium-1-3
										label.uk-form-label(for='rate-experience') Experience
									div.uk-width-medium-2-3
										div.uk-form-controls(style='background-image:url("/images/back2.png");background-repeat:no-repeat')
											input#rate-experience(type='text', data-slider='true', data-slider-range='1,5', data-slider-step='0.5', data-slider-snap='true')
											i.uk-form-help-inline(style='color:green')
						p
						div.uk-grid(data-uk-grid-margin)
							div.uk-width-medium-1-2
								input#rate-candidate-id(type='hidden')
								input#rate-curve-id(type='hidden')
							div.uk-width-medium-1-2
								button#btn-save-curve.uk-button.uk-button-primary.uk-align-right.uk-modal-close Save
								button#btn-cancel-curve.uk-button.uk-button-default.uk-align-right.uk-modal-close Cancel
								button#btn-delete-curve.uk-button.uk-button-danger.uk-align-right.uk-modal-close Delete

			div#splash.uk-modal(style='display:none')
				div.uk-modal-dialog
					a.uk-modal-close.uk-close(href='')
					img(src='/images/satir-splash.gif')
